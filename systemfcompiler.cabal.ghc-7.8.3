name:                   systemfcompiler
version:                0.1.0.1
category:               Language
stability:              experimental
build-type:             Simple
cabal-version:          >= 1.8
tested-with:            GHC == 7.8.3
data-files:		runtime/runtime.jar

executable f2j
  hs-source-dirs:       compiler
  main-is:              Main.hs
  build-depends:        array == 0.5.0.0,
                        base == 4.7.0.1,
                        bytestring == 0.10.4.0,
                        containers == 0.5.5.1,
                        directory == 1.2.1.0,
                        filepath == 1.3.0.2,
                        mtl == 2.1.3.1,
                        network >= 2.4.2.3,
                        pretty == 1.1.1.1,
                        process == 1.2.0.0,
                        transformers == 0.3.0.0,
                        cmdargs == 0.10.*,
                        language-java >= 0.2.6,
                        wl-pprint == 1.1.*,
                        template-haskell == 2.9.0.0,
                        file-embed == 0.0.7
  build-tools:          alex >= 3.1.3,
                        happy >= 1.19.4
  other-modules:        Lexer, Parser, Assertions
  ghc-options:          -Wall
                        -fno-warn-missing-signatures
                        -fno-warn-unused-matches
                        -fno-warn-unused-binds
                        -fno-warn-name-shadowing

executable f2ji
  hs-source-dirs:       interpreter,compiler
  main-is:              Main.hs
  build-depends:        array == 0.5.0.0,
                        base == 4.7.0.1,
                        bytestring == 0.10.4.0,
                        containers == 0.5.5.1,
                        directory == 1.2.1.0,
                        filepath == 1.3.0.2,
                        mtl == 2.1.3.1,
                        network >= 2.4.2.3,
                        pretty == 1.1.1.1,
                        process == 1.2.0.0,
                        transformers == 0.3.0.0,
                        cmdargs == 0.10.*,
                        language-java >= 0.2.6,
                        wl-pprint == 1.1.*,
                        file-embed == 0.0.7,
                        haskeline == 0.7.1.2,
                        timeit == 1.0.0.0,
                        split == 0.2.2,
                        parsec >= 3.1.5
  build-tools:          alex >= 3.1.3,
                        happy >= 1.19.4
  other-modules:        Lexer, Parser
  ghc-options:          -Wall
                        -fno-warn-missing-signatures
                        -fno-warn-unused-matches
                        -fno-warn-unused-binds
                        -fno-warn-name-shadowing
