name:                   systemfcompiler
version:                0.1.0.1
category:               Language
stability:              experimental
build-type:             Simple
cabal-version:          >= 1.8
tested-with:            GHC == 7.8.3
data-files:   runtime/runtime.jar

executable f2j
  hs-source-dirs:       compiler
  main-is:              Main.hs
  build-depends:        array == 0.5.*
                      , base == 4.7.*
                      , bytestring == 0.10.*
                      , cmdargs == 0.10.*
                      , containers == 0.5.*
                      , directory == 1.2.*
                      , file-embed == 0.0.7
                      , filepath == 1.3.*
                      , language-java == 0.2.*
                      , ansi-wl-pprint == 0.6.*
                      , mtl == 2.1.*
                      , network == 2.5.*
                      , pretty == 1.1.*
                      , process == 1.2.*
                      , split >= 0.2.2
                      , template-haskell == 2.9.*
                      , time >= 1.4.2
                      , timeit >= 1.0.0.0
                      , transformers == 0.3.*
  build-tools:          alex >= 3.1.3,
                        happy >= 1.19.4
  other-modules:        Lexer, Parser
  ghc-options:          -Wall
                        -fno-warn-missing-signatures
                        -fno-warn-unused-matches
                        -fno-warn-unused-binds
                        -fno-warn-name-shadowing

Flag Z3
  description: SMT solver for symbolic evaluator
  default: False

executable f2ji
  hs-source-dirs:       interpreter,compiler
  main-is:              Main.hs
  build-depends:        array == 0.5.*
                      , base == 4.7.*
                      , bytestring == 0.10.*
                      , cmdargs == 0.10.*
                      , containers == 0.5.*
                      , directory == 1.2.*
                      , file-embed == 0.0.7
                      , filepath == 1.3.*
                      , haskeline == 0.7.*
                      , language-java == 0.2.*
                      , mtl == 2.1.*
                      , network == 2.5.*
                      , parsec == 3.1.*
                      , pretty == 1.1.*
                      , process == 1.2.*
                      , split == 0.2.*
                      , split >= 0.2.2
                      , template-haskell == 2.9.*
                      , time >= 1.4.2
                      , timeit == 1.0.*
                      , timeit >= 1.0.0.0
                      , transformers == 0.3.*
                      , ansi-wl-pprint == 0.6.*
  if flag(Z3)
                        build-depends: z3 >= 0.3.2
                        cpp-options: -DZ3
  build-tools:          alex >= 3.1.3,
                        happy >= 1.19.4
  other-modules:        Lexer, Parser
  ghc-options:          -Wall
                        -fno-warn-missing-signatures
                        -fno-warn-unused-matches
                        -fno-warn-unused-binds
                        -fno-warn-name-shadowing
