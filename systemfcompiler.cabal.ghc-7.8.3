name:                   systemfcompiler
version:                0.1.0.1
category:               Language
stability:              experimental
build-type:             Simple
cabal-version:          >= 1.8
tested-with:            GHC == 7.8.3
data-files:		runtime/runtime.jar

executable f2j
  hs-source-dirs:       compiler
  main-is:              Main.hs
  build-depends:        array == 0.5.*,
                        base == 4.7.*,
                        bytestring == 0.10.*,
                        containers == 0.5.*,
                        directory == 1.2.*,
                        filepath == 1.3.*,
                        mtl == 2.1.*,
                        network == 2.5.*,
                        pretty == 1.1.*,
                        process == 1.2.*,
                        transformers == 0.3.*,
                        cmdargs == 0.10.*,
                        language-java == 0.2.*,
                        wl-pprint == 1.1.*,
                        template-haskell == 2.9.*,
                        file-embed == 0.0.7
  build-tools:          alex >= 3.1.3,
                        happy >= 1.19.4
  other-modules:        Lexer, Parser, Assertions
  ghc-options:          -Wall
                        -fno-warn-missing-signatures
                        -fno-warn-unused-matches
                        -fno-warn-unused-binds
                        -fno-warn-name-shadowing

flag Z3
  description: SMT solver for symbolic evaluator
  default: False

executable f2ji
  hs-source-dirs:       interpreter,compiler
  main-is:              Main.hs
  build-depends:        array == 0.5.*,
                        base == 4.7.*,
                        bytestring == 0.10.*,
                        containers == 0.5.*,
                        directory == 1.2.*,
                        filepath == 1.3.*,
                        mtl == 2.1.*,
                        network == 2.5.*,
                        pretty == 1.1.*,
                        process == 1.2.*,
                        transformers == 0.3.*,
                        cmdargs == 0.10.*,
                        language-java == 0.2.*,
                        wl-pprint == 1.1.*,
                        file-embed == 0.0.7,
                        haskeline == 0.7.*,
                        timeit == 1.0.*,
                        template-haskell == 2.9.*,
                        split == 0.2.*,
                        parsec == 3.1.*
  If flag(Z3)
         build-depends: z3 == 0.3.2
  build-tools:          alex >= 3.1.3,
                        happy >= 1.19.4
  other-modules:        Lexer, Parser
  ghc-options:          -Wall
                        -fno-warn-missing-signatures
                        -fno-warn-unused-matches
                        -fno-warn-unused-binds
                        -fno-warn-name-shadowing
