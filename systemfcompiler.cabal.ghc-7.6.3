name:                   systemfcompiler
version:                0.1.0.1
category:               Language
stability:              experimental
build-type:             Simple
cabal-version:          >= 1.8
tested-with:            GHC == 7.6.3
data-files:		runtime/runtime.jar

executable f2j
  hs-source-dirs:       compiler
  main-is:              Main.hs
  build-depends:        base == 4.6.0.1,
                        containers,
                        transformers == 0.3.*,
                        array == 0.4.0.1,
                        filepath == 1.3.0.1,
                        directory == 1.2.0.1,
                        process == 1.1.0.2,
                        language-java == 0.2.6,
                        wl-pprint == 1.1.*,
                        pretty == 1.1.*,
                        cmdargs == 0.10.*,
                        mtl == 2.1.2,
                        network == 2.4.1.2,
                        bytestring == 0.10.0.2,
                        file-embed
  build-tools:          alex >= 3.0.5,
                        happy >= 1.18.10
  other-modules:        Lexer, Parser
  ghc-options:          -Wall
                        -fno-warn-missing-signatures
                        -fno-warn-unused-matches
                        -fno-warn-unused-binds
                        -fno-warn-name-shadowing
